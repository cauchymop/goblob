<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- Set AppCompatâ€™s color theming attrs -->
      <item name="colorPrimary">@color/primary</item>
      <item name="colorPrimaryDark">@color/primary_dark</item>
      <item name="colorAccent">@color/primary_dark</item>
      <item name="colorControlHighlight">@color/primary_dark</item>
      <item name="android:windowBackground">@drawable/board_bg</item>

      <item name="windowActionBar">false</item>
      <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameAction">
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>