<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:layout_gravity="center_horizontal|top"
    tools:showIn="@layout/fragment_game_ingame">

  <ImageView
      android:layout_width="44dip"
      android:layout_height="44dip"
      android:id="@+id/titleImage"
      android:contentDescription="@string/player_stonecolor_content_description"
      android:layout_gravity="left|center_vertical"
      tools:src="@drawable/ic_launcher"/>

  <TextView
      style="@style/Title"
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="left|center_vertical"
      tools:text="Jerome Abela"/>

  <ImageView
      android:layout_width="44dip"
      android:layout_height="44dip"
      android:id="@+id/avatarImage"
      android:contentDescription="@string/player_avatar_content_description"
      android:layout_gravity="left|center_vertical"
      tools:src="@drawable/white_stone"/>
</LinearLayout>